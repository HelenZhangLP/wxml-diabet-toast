/* components/diabetToast/index.wxss */

.toast-wrap {
    min-width: 240rpx;
    min-height: 232rpx;
    padding: 52rpx 24rpx 24rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    max-width: 498rpx;
    background-color: #141E34;
    opacity: 0.9;
    text-align: center;

    position: absolute;
    top: 50%;
    left: 50%;

    transform: translate(-50%);
    z-index: 9999;
}

.text {
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 40rpx;
    text-align: center;
}
